<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- 声明属性集的名称为MyAttrView -->
    <declare-styleable name="MyAttrView">
        <attr name="test_id" format="integer" /><!-- 声明属性test_id，类型为integer -->
        <attr name="test_msg" format="string" /><!-- 声明属性test_msg，类型为string -->
        <attr name="test_bitmap" format="reference" /><!-- 声明属性test_bitmap，类型为引用类型reference（引用资源ID） -->
    </declare-styleable>
    
    <declare-styleable name="MyToggleButton">
        <attr name="my_on_background" format="reference" />
        <attr name="my_off_background" format="reference" />
        <attr name="my_slide_btn" format="reference" />
        <attr name="my_toggle_state" format="boolean" />
    </declare-styleable>
</resources>
